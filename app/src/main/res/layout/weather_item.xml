<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white"
	android:paddingStart="30dp"
	android:paddingEnd="30dp">

	<TextView
		android:id="@+id/weather_item_time"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_marginTop="2dp"
		android:layout_marginBottom="2dp"
		android:gravity="center"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/weather_item_icon"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="13 C" />

	<ImageView
		android:id="@+id/weather_item_icon"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_marginStart="50dp"
		android:layout_marginTop="2dp"
		android:layout_marginEnd="50dp"
		android:layout_marginBottom="2dp"
		android:contentDescription="@string/no_description"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/weather_item_celsius"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/weather_item_time"
		app:layout_constraintTop_toTopOf="parent"
		tools:src="@drawable/ic_sun"/>

	<TextView
		android:id="@+id/weather_item_celsius"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_marginTop="2dp"
		android:layout_marginBottom="2dp"
		android:gravity="center"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.5"
		app:layout_constraintStart_toEndOf="@+id/weather_item_icon"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="6:00am" />


</androidx.constraintlayout.widget.ConstraintLayout>