<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="40dp"
	android:background="@color/white"
	android:paddingStart="20dp"
	android:paddingEnd="20dp">

	<TextView
		android:id="@+id/weather_item_time"
		android:layout_width="80dp"
		android:layout_height="match_parent"
		android:layout_marginTop="2dp"
		android:layout_marginBottom="2dp"
		android:gravity="start|center_vertical"
		android:textSize="15sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/weather_item_icon"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="13 C" />

	<ImageView
		android:id="@+id/weather_item_icon"
		android:layout_width="40dp"
		android:layout_height="match_parent"
		android:layout_marginTop="2dp"
		android:layout_marginBottom="2dp"
		android:contentDescription="@string/no_description"
		android:textSize="20sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/weather_item_celsius"
		app:layout_constraintStart_toEndOf="@+id/weather_item_time"
		app:layout_constraintTop_toTopOf="parent"
		tools:src="@drawable/ic_sun" />

	<TextView
		android:id="@+id/weather_item_celsius"
		android:layout_width="80dp"
		android:layout_height="match_parent"
		android:layout_marginTop="2dp"
		android:layout_marginBottom="2dp"
		android:gravity="end|center_vertical"
		android:textSize="15sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/weather_item_icon"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="6:00am" />


</androidx.constraintlayout.widget.ConstraintLayout>